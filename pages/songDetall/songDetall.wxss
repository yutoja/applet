  top: 31rpx;
  left: 0;
  border-radius: 50%;
  z-index: 999;
}
.jing{
  border-top: 4rpx solid #da3f34;
  position: absolute;
  top: 35rpx;
  left: 0;
  width: 0;
  border-radius: 20rpx;
}
.footer{
  margin-top: 10rpx;
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.big{
  font-size: 80rpx;
}
.pir{
  display: flex;
