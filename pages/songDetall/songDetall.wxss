.minsize{
 font-size: 40rpx !important;
}
.play{
  transform: rotate(-45deg) !important;
}
.rou{
   animation-play-state: paused !important;
}
@keyframes am{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
.songDetailContainer{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-image: linear-gradient(#909090,#424242);
}
.songbod{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.author{
  margin: 20rpx 0;
  font-size: 36rpx;
  font-weight: 900;
  color: rgb(240, 240, 240);
  text-align: center;
}
.needle{
  width: 60rpx;
  height: 240rpx;
  position: relative;
  top: 50rpx;
  transform-origin: 23px 5px;
  transform: rotate(-80deg);
  transition: all 0.5s;
  z-index: 999;
}
.jiazai{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 738rpx;
  color: white;
}
.discContainer{
  position: relative;
  z-index: 11;
  top: -120rpx;
  width: 498rpx;
  height: 498rpx;
  animation:am 10s cubic-bezier(0.27, 0.23, 1, 1) infinite ;
}
.disc{
  width: 498rpx;
  height: 498rpx ;
}
.musicimg{
  height: 300rpx;
  width: 300rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.songlie{
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 120rpx;
}
.iconfont{
  font-size: 48rpx;
  color:white;
}
.bod{
  height: 100rpx;
  width: 92%;
  display: flex;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  align-items: center;
  
}
.reage{
  /* border-top: 1px solid rgb(141, 141, 141); */
